{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "XDebug [Docker]",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "stopOnEntry": false,
      "xdebugSettings": {
        "max_children": 128,
        "max_data": 1024,
        "max_depth": 3,
        "show_hidden": 1
      },
      "log": false,
      "pathMappings": {
        "/opt/drupal/web/modules/custom":"${workspaceRoot}/VOLUMES/modules",
        "/opt/drupal/web/themes/custom":"${workspaceRoot}/VOLUMES/themes"
      },
    },
  ]
}
